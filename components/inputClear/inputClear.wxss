.input-clear-wrap {
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
    width: 100%;
    border-bottom: 2rpx solid #eee;
    font-size: 0;
}
.before-input{
    flex: 0;
    font-size: 16px;
}
.input {
    flex: 1;
    margin-right: 60rpx;
    padding-left: 10rpx;
    padding-bottom: 2rpx;
    height: 100%;
    font-size: 16px;
}

.clear-btn {
    flex: 0;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    position: absolute;
    right: 0;
    bottom: -10rpx;
    width: 60rpx;
    height: 100%;
    padding: 10rpx 0;
    color: #999;
}
